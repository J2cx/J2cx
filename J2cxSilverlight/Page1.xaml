                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
                <Paragraph>
                    Compétences
                </Paragraph>
            </RichTextBox>
            <RichTextBox Margin="10"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                FontSize="14"
                Foreground="WhiteSmoke"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Name="RichTextBoxCom" FontStyle="Normal"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
                <Paragraph>
                    C#, .Net, etc.
                </Paragraph>
            </RichTextBox>
            <RichTextBox Margin="10"
                Grid.Row="2"
                Grid.Column="0"
                FontSize="14"
                Foreground="SteelBlue"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Name="RichTextBoxHExp"  FontStyle="Normal" FontWeight="Bold"
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
                <Paragraph>
                    Expériences
                </Paragraph>
            </RichTextBox>
            <RichTextBox Margin="10"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                FontSize="14"
                Foreground="WhiteSmoke"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Name="RichTextBoxExp" FontStyle="Normal" 
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
                <Paragraph>
                    Ingénieur Développement en .Net et C# chez DirectAnnonces
                </Paragraph>
            </RichTextBox>
            <RichTextBox Margin="10"
                Grid.Row="3"
                Grid.Column="0"
                FontSize="14"
                Foreground="SteelBlue"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Name="RichTextBoxHFor"  FontStyle="Normal" FontWeight="Bold" 
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
