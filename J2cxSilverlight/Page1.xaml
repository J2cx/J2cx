                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
                <Paragraph>
                    ENST Bretagne (TELECOM Bretgane)
                </Paragraph>
            </RichTextBox>
            <RichTextBox Margin="10"
                Grid.Row="4"
                Grid.Column="0"
                FontSize="14"
                Foreground="SteelBlue"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Name="RichTextBoxHLan" FontStyle="Normal" FontWeight="Bold" 
                         Background="Transparent"
                         BorderThickness="0"
                         IsReadOnly="True" >
